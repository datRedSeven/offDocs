<p id="notice"><%= notice %></p>

<h1>Listing Docs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Source</th>
      <th>Source link</th>
      <th>Document</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td><%= doc.title %></td>
        <td><%= doc.source %></td>
        <td><%= doc.source_link %></td>
        <td><%= doc.document %></td>
        <td><%= doc.url %></td>
        <td><%= link_to 'Show', doc %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_doc_path(doc) %></td>
          <td><%= link_to 'Destroy', doc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
<%= link_to 'New Doc', new_doc_path %>
<% end %>

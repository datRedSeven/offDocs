<!DOCTYPE html>
<html>
<head>
	<title>Offdocs</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>


	<div class="menu-navigation">
		<nav class="navbar navbar-default" role="navigation">
			<div class="navbar-header">
				<button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="navbar-brand"> <%= link_to 'OffDocs', root_path %> </div>
			</div>

			<div id="navbarCollapse" class="collapse navbar-collapse">

				<ul id="sign-links" class="nav navbar-nav navbar-right">
					<% if user_signed_in? %>
					<li> <%= link_to 'Watching', favorites_path %> </li>
					<li> <%= link_to current_user.email, edit_user_registration_path %> </li>
					<li> <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %> </li>
					<% else %>
					<li> <%= link_to 'Sign up', new_user_registration_path %> </li>
					<li> <%= link_to 'Sign in', new_user_session_path %> </li>
					<% end %>
				</ul>

			</div>
		</nav>
	</div>
	
	<div class="col-md-12">
		<div class = "row">

			<div class="col-md-4">
				
				<%= form_tag docs_path, :method => "get", id: "search-form-titles", class: "input-group" do %>
				<%= text_field_tag :titles, params[:titles], placeholder: "Поиск по названию", class: "form-control" %>
				<span class = "input-group-btn">
					<%= submit_tag "Search", class: "btn btn-primary" %>
				</span>
				<% end %>
				
			</div>

			<div class="col-md-4">
				
				<%= form_tag docs_path, :method => "get", id: "search-form-document", class: "input-group"  do %>
				<%= text_field_tag :documents, params[:documents], placeholder: "Поиск по тексту", class: "form-control" %>
				<span class = "input-group-btn">
					<%= submit_tag "Search", class: "btn btn-primary" %>
				</span>
				<% end %>
				
			</div>
			<div class="col-md-4">
				
				<%= form_tag docs_path, :method => "get", id: "search-form-document", class: "input-group"  do %>
				<%= text_field_tag :departments, params[:departments], placeholder: "Поиск по источнику", class: "form-control" %>
				<span class = "input-group-btn">
					<%= submit_tag "Search", class: "btn btn-primary" %>
				</span>
				<% end %>
				
			</div>
		</div>
	</div>
	
	<div class = "col-md-12">
		<div class = "row date-row">
		<div class="col-sm-offset-4 col-md-4">
			<%= form_tag docs_path, :method => "get", id: "search-form-document", class: "form-inline"  do %>
			
				<%= text_field_tag :start_time, params[:start_time], placeholder: "Дата", :data => {:provide => 'datepicker'}, "data-date-format" => "dd/mm/yyyy", class: "form-control left-date" %>
			
			
				<%= text_field_tag :end_time, params[:end_time], placeholder: "Дата", :data => {:provide => 'datepicker' }, "data-date-format" => "dd/mm/yyyy", class: "form-control right-date" %>
			

			<%= submit_tag "Search", class: "btn btn-primary" %>


			<% end %>
			</div>
		</div>
	</div>

	
	

	
	<% flash.each do |name, msg| %>
	<div class="alert alert-warning">
		<%= content_tag(:div, msg) %>
	</div>
	<% end %>
	

	<div class="col-md-12 center-block">
		<%= yield %>
	</div>

</body>
</html>

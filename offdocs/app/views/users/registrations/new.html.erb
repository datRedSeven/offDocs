<div class="col-md-4 col-md-offset-4">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
    <br/>
  


    <%= f.label(:password, "Пароль") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  

  
    <%= f.label(:password_confirmation, "Подтверждение пароля") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",  class: "form-control" %>
    <br/>
  

    <ul class="list-group">
    <li class="list-group-item">
    <%= f.radio_button(:subscription, 0) %>
    <%= f.label(:subscription_never, "Не получать уведомления") %>
    </li>
    <li class="list-group-item">
    <%= f.radio_button(:subscription, 1) %>
    <%= f.label(:subscription_weekly, "Каждую неделю") %>
    </li>
    <li class="list-group-item">
    <%= f.radio_button(:subscription, 2) %>
    <%= f.label(:subscription_daily, "Каждый день") %>
    </li>
    <li class="list-group-item">
    <%= f.radio_button(:subscription, 3) %>
    <%= f.label(:subscription_on_edit, "При изменении в документах") %>
    </li>
    </ul>
  

  <div class="actions">
    <%= f.submit "Создать аккаунт", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
